{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.screenName) }}
        {{ form_row(registrationForm.firtName) }}
        {{ form_row(registrationForm.lastName) }}
        {{ form_row(registrationForm.mail) }}
        {{ form_row(registrationForm.city) }}
        {{ form_row(registrationForm.cityCode) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.phone) }}
        {{ form_row(registrationForm.address) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
