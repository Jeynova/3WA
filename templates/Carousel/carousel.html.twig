<div id="carouselExampleControls" class="carousel slide " data-ride="carousel" style="margin:auto">
  <div class="carousel-inner">

    {% set foo = true %}
    {% for key, actualite in actualites %}
    {% if foo == true %}
    <div class="carousel-item active">
      <img class="d-block w-100" src="{{actualite.picture}}" alt="Slide {{key}}">
      <div class="carousel-caption" style="background-color:rgba(0,0,0,0.6); ">
    <h3>{{actualite.theme}}</h3>
    <p>{{actualite.content}}</p>
    <a class="btn btn-primary" style="color:white;text-decoration: none;" href="{{ path('actualite_show',{'id':actualite.id}) }}" role="button">More</a>
  </div>

    </div>
    {% set foo = false %}
    {% else %}
    <div class="carousel-item">
      <img class="d-block w-100" src="{{actualite.picture}}" alt="Slide {{key}}">
      <div class="carousel-caption"  style="background-color:rgba(0,0,0,0.6);">
    <h3>{{actualite.theme}}</h3>
    <p>{{actualite.content}}</p>
    <a class="btn btn-primary" style="color:white;text-decoration: none;" href="{{ path('actualite_show',{'id':actualite.id}) }}" role="button">More</a>
  </div>
    </div>
    {% endif %}

    {% endfor %}

  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
