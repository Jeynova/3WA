{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <h1>Client index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirtName</th>
                <th>LastName</th>
                <th>Mail</th>
                <th>Address</th>
                <th>CityCode</th>
                <th>City</th>
                <th>Phone</th>
                <th>Password</th>
                <th>Role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.firtName }}</td>
                <td>{{ client.lastName }}</td>
                <td>{{ client.mail }}</td>
                <td>{{ client.address }}</td>
                <td>{{ client.cityCode }}</td>
                <td>{{ client.city }}</td>
                <td>{{ client.phone }}</td>
                <td>{{ client.password }}</td>
                <td>{{ client.role }}</td>
                <td>
                    <a href="{{ path('client_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('client_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('client_new') }}">Create new</a>
{% endblock %}
