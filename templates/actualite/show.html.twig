{% extends 'base.html.twig' %}

{% block title %}Actualite{% endblock %}

{% block body %}
    <h1>Actualite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actualite.id }}</td>
            </tr>
            <tr>
                <th>Theme</th>
                <td>{{ actualite.theme }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ actualite.content }}</td>
            </tr>
            <tr>
                <th>PublicationDate</th>
                <td>{{ actualite.publicationDate ? actualite.publicationDate|date('Y-m-d') : '' }}</td>
            </tr>

                <th>Sample</th>
                <td>{{actualite.picture|figure(actualite.content)|raw}}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('actualite_index') }}">back to list</a>

    <a href="{{ path('actualite_edit', {'id': actualite.id}) }}">edit</a>

    {{ include('actualite/_delete_form.html.twig') }}
{% endblock %}
