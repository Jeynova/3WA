{% extends 'base.html.twig' %}

{% block title %}Admin index{% endblock %}


{% block body %}
{% if is_granted('ROLE_ADMIN') %}
    <h1>Admin index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Collection</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for admin in admins %}
            <tr>
                <td>{{ admin.id }}</td>
                <td>{{ admin.collection }}</td>
                <td>
                    <a href="{{ path('admin_show', {'id': admin.id}) }}">show</a>
                    <a href="{{ path('admin_edit', {'id': admin.id}) }}">edit</a>
                </td>
            </tr>
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_new') }}">Create new</a>

    <div class="cmsArray">
      <table class="arrayData">
        {% for item in result %}
          <tr>
            <td>{{item[0].name}}</td>
            {% for event in events %}
              {% if event.ArtisteId.id == item[0].id %}<td>{{ event.description }}</td>{% endif %}

            {% endfor %}
          </tr>

        {% endfor %}

      </table>

    </div>
    {% else %}
  <p>Vous n'Ãªtes pas un Admin</p>
  {% endif %}
{% endblock %}
